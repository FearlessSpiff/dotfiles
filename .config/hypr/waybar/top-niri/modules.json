{
  "hyprland/workspaces": {
    "on-click": "activate",
    "format": " {icon} ",
    "format-icons": {
      "1": "󰲠",
      "2": "󰲢",
      "3": "󰲤",
      "4": "󰲦",
      "5": "󰲨",
      "6": "󰲪",
      "7": "󰲬",
      "8": "󰲮",
      "9": "󰲰"
    }
  },
  "niri/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "󰲠",
      "2": "󰲢",
      "3": "󰲤",
      "4": "󰲦",
      "5": "󰲨",
      "6": "󰲪",
      "7": "󰲬",
      "8": "󰲮",
      "9": "󰲰"
    }
  },
  "custom/cliphist": {
    "format": "",
    "on-click": "sleep 0.1 && ~/.config/hypr/scripts/cliphist.sh",
    "on-click-right": "sleep 0.1 && ~/.config/hypr/scripts/cliphist.sh d",
    "on-click-middle": "sleep 0.1 && ~/.config/hypr/scripts/cliphist.sh w",
    "tooltip": false
  },
  "custom/toggle-leftbar": {
    "format": "\uF44E",
    "on-click": "~/.config/hypr/waybar/scripts/leftbar-toggle.sh",
    "tooltip": false
  },
  "custom/exit": {
    "format": " ",
    "on-click": "bash ~/.config/hypr/scripts/leave.sh",
    "tooltip": false
  },
  "clock": {
    "format": "{:%H:%M %d.%m.%Y}",
    "tooltip-format": "{calendar}",
    "format-alt": "{:%Y-%m-%d}"
  },
  "network": {
    "format": "{ifname}",
    "format-wifi": "  {signalStrength}%",
    "format-ethernet": "  {ipaddr}",
    "format-disconnected": "Not connected",
    "tooltip-format": " {ifname} via {gwaddri}",
    "tooltip-format-wifi": "  {essid} ({signalStrength}%)",
    "tooltip-format-ethernet": "  {ifname} ({ipaddr}/{cidr})",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
    "on-click": "alacritty -e nmtui"
  },
  "battery": {
    "states": {
      "warning": 25,
      "critical": 10
    },
    "format": "{icon} {capacity}%",
    "format-charging": " {capacity}%",
    "format-plugged": "  {capacity}%",
    "format-alt": "{icon} {time}",
    "format-icons": [
      " ",
      " ",
      " ",
      " ",
      " "
    ]
  },
  "pulseaudio#input": {
    "format-source": " {volume}%",
    "format-source-muted": " off",
    "format": "{format_source}",
    "scroll-step": 1,
    "smooth-scrolling-threshold": 1,
    "max-volume": 100,
    "on-click": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
    "on-click-middle": "pavucontrol",
    "on-scroll-up": "pactl set-source-volume @DEFAULT_SOURCE@ +1%",
    "on-scroll-down": "pactl set-source-volume @DEFAULT_SOURCE@ -1%",
  },
  "pulseaudio#output": {
    "format": "{icon} {volume}%",
    "format-muted": " off",
    "format-icons": {
        "default": ["", "", ""]
    },
    "max-volume": 100,
    "scroll-step": 5,
    "reverse-scrolling": true,
    "smooth-scrolling-threshold": 1,
    "on-click": "pavucontrol",
    "on-click-middle": "pavucontrol",
  },
  "bluetooth": {
    "format": "",
    "format-disabled": "󰂲",
    "format-connected": "",
    "tooltip-format": "{controller_alias}\t{controller_address}",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "on-click": "blueman-manager"
  },
  "custom/bluetoothtoggle": {
    "format": " ",
    "on-click": "rfkill toggle bluetooth",
    "tooltip": false
  },
  "group/bluetooth": {
    "orientation": "horizontal",
    "modules": [
      "bluetooth"
    ]
  },
  "group/backlight": {
    "orientation": "horizontal",
    "modules": [
      "backlight",
    ]
  },
  "backlight": {
    "device": "intel_backlight",
    "scroll-step": 5.0,
    "format": " {percent}%",
    "tooltip": false
  },
  "custom/power-profile": {
    "exec": "sleep 0.3 && /home/steph/.config/hypr/waybar/scripts/powerprofilecycle.sh -m",
    "interval": 120,
    "on-click": "/home/steph/.config/hypr/waybar/scripts/powerprofilecycle.sh",
    "exec-on-event": true,
    "format-icons": [
      "\uF111"
    ],
  },
  "tray": {
    "icon-size": 21,
    "spacing": 6,
  }
}
